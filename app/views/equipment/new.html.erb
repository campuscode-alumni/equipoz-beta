<h1>Cadastro de Equipamentos</h1>

<%= simple_form_for @equipment do |f| %>
  <%= f.input :category_id, collection: @categories, label: 'Categoria' %>
  <%= f.input :serial_number, label: 'Número de Serie' %>
  <%= f.input :acquisition_date, label: 'Data de Aquisição', as: :string %>
  <%= f.input :replacement_value, label: 'Valor de Reposição' %>
  <%= f.input :usage_limit, label: 'Limite de Uso' %>
  <%= f.input :description, label: 'Descrição', as: :text %>
  <%= f.button :submit, 'Cadastrar Equipamento' %>
<% end %>
